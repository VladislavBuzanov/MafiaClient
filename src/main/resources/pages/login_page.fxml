<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="anchor" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.informatics.jojomafia.controllers.LoginPageController">
    <children>
      <ImageView fx:id="imageView" fitHeight="720.0" fitWidth="1280.0">
         <image>
            <Image url="@../img/login.jpg" />
         </image>
      </ImageView>
        <TextField fx:id="loginField" layoutX="237.0" layoutY="268.0" promptText="Login" />
        <PasswordField fx:id="password" layoutX="237.0" layoutY="364.0" promptText="Password" />
        <Button fx:id="loginButton" layoutX="302.0" layoutY="486.0" mnemonicParsing="false" onAction="#login" text="Login" />
        <ImageView fx:id="backImage" fitHeight="60.0" fitWidth="300.0" layoutX="980.0" layoutY="660.0" onMouseClicked="#back">
            <image>
                <Image url="@../img/back.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
